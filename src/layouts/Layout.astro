---
import Footer from "@/components/footer.astro";
import ScrollToTop from "@/components/scroll-to-top.astro";
import "../styles.css";
import '@fontsource-variable/playpen-sans'
import "@fontsource/inter";
import { ViewTransitions } from "astro:transitions";
export interface Props {
  title?: string;
}

const { title = "Voumy - Where Words Come Alive" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google-adsense-account" content="ca-pub-4140904948517840">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <!-- local icons -->
    <link
      rel="stylesheet"
      id="icons"
      href="https://unpkg.com/bootstrap-icons/font/bootstrap-icons.min.css"
    />

    <title>{title}</title>
    <ViewTransitions  />
  </head>
  <body class="font-sans text-neutral-700">
    <slot />
    <Footer />

  <ScrollToTop />
  </body>
</html>
