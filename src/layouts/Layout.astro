---
import "../styles.css";
import "@fontsource/inter";
export interface Props {
  title?: string;
}

const { title = "Voumy - Where Words Come Alive" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png" />
    <!-- local icons -->
    <link
      rel="stylesheet"
      id="icons"
      href="https://unpkg.com/bootstrap-icons/font/bootstrap-icons.min.css"
    />

    <title>{title}</title>
  </head>
  <body class="text-neutral-700 font-sans">
    <slot />

    <!-- =========={ SCROLL TO TOP }==========  -->
    <a
      href="#"
      class="fixed bottom-4 px-3 py-2 rounded border border-dashed back-top bg-neutral-800 border-neutral-800 text-neutral-50 end-4"
      aria-label="Scroll To Top"
    >
      <i class="bi bi-arrow-up"/>
    </a>

    <!--start::Global javascript (used in all pages)-->

    <!-- theme js -->
    <script src="../scripts/scroll.ts"></script>
  </body>
</html>
