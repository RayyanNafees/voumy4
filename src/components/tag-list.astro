---
import { getCollection } from "astro:content";

const posts = await getCollection("posts");

const tags = [
  ...new Set(
    posts
      .flatMap((post) =>
        Array.isArray(post.data.tags)
          ? post.data.tags.flatMap((i) => i.split(" "))
          : post.data.tags.split(" ")
      )
      .filter((i) => i)
      .map((i) => i.toLowerCase())
  ).keys(),
];

// Sort tags alphabetically
const sortedTags = [...tags].sort();
---

<div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
  <h3 class="px-6 py-4 w-full border-b-2 border-indigo-200 bg-gradient-to-r from-indigo-50 to-purple-50 text-gray-800 font-bold uppercase tracking-wider text-lg">
    Tags
  </h3>
  <div class="p-6">
    <ul
      class="flex overflow-y-auto flex-wrap gap-2 items-center max-h-56 text-sm"
    >
      {
        sortedTags?.map?.((tag) => (
          <li>
            <a
              href={"/tags/" + tag}
              class="flex px-3 py-1 lowercase rounded-full 
                     bg-indigo-50 text-indigo-700 
                     hover:bg-indigo-100 hover:text-indigo-800
                     transition-all duration-300 ease-in-out 
                     text-xs font-medium"
            >
              {tag}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  /* Custom scrollbar for tags list */
  ul {
    scrollbar-width: thin;
    scrollbar-color: theme('colors.indigo.200') theme('colors.indigo.50');
  }

  ul::-webkit-scrollbar {
    width: 8px;
  }

  ul::-webkit-scrollbar-track {
    background: theme('colors.indigo.50');
  }

  ul::-webkit-scrollbar-thumb {
    background-color: theme('colors.indigo.200');
    border-radius: 20px;
  }
</style>