---
export interface Props {
  tags: string[];
}

const tags = Astro.props.tags ?? [];
---

<div class="border border-dashed bg-neutral-50 border-neutral-200">
  <h3 class="px-6 py-3 w-full border-b border-dashed border-neutral-200">
    Tags
  </h3>
  <div class="p-6">
    <ul class="flex flex-wrap gap-2 items-center text-sm">
      {
        tags.map((tag) => (
          <li>
            <a
              href="#"
              class="flex px-3 py-1 bg-white border hover:bg-neutral-100 border-neutral-200 lowercase"
            >
              {tag}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
